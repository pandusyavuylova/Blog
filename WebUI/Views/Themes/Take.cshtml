@using Domain
@model Domain.Article

<div class="well">
@using (Html.BeginForm("Take", "Themes", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
    <div class="row">
        <div class="col-xs-12">
            <h3>
                <strong>
                    @Model.Title
                </strong>
            </h3>
        </div>
        <div class="col-xs-2">

        </div>
    </div>
    @Html.TextAreaFor(model => model.Text, new { cols = 135, @rows = 30 })
    <p><button type="submit">Прийняти</button></p>
    }
</div>